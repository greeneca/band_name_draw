<%= render "shared/analytics" %>
<% if @login_required %>
  <h1>Login To Band</h1>
  <h1><a href="<%= @login_link %>">Login</a></h1>

  <h3>Discalmer:</h3>
  <p>This application does not collect or have access to your Band credentials.
  Credentials are entered on the Band website. The Band application will send  a
  token to this application to allow access.</p>
<% else %>
  <h1>Select Band</h1>
  <ul>
    <% @bands.each do |band| %>
      <li><a href="/band?band_key=<%= band["band_key"]%>"><%= band["name"] %></a></li>
    <% end %>
  </ul>
  <p><a href="/logout">Logout</a></p>
<% end %>

